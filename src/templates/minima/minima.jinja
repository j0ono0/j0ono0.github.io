{% extends "base.jinja" %}

{% import 'minima/macros.jinja' as mm %}

{% block head %}
{{ super() }}
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300..800;1,300..800&display=swap" rel="stylesheet">
<link rel="stylesheet" href="assets/minima/minima.css">

{% for macro, args in head %}
{{ mm[macro](*args) }}
{% endfor %}

{% endblock head %}

{% block body %}
<header>
    <h1>Site Genie-rator</h1>
    {% include 'minima/nav.jinja' %}
</header>
<main>
    {% for macro, args in main %}
    {{ mm[macro](*args) }}
    {% endfor %}

</main>
<footer>made with Python</footer>
<script src="assets/minima/minima.js"></script>

{% endblock body %}